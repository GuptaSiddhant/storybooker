{
  "name": "storybooker-monorepo",
  "private": true,
  "description": "Self hosted Storybooks management.",
  "repository": "git@github.com:GuptaSiddhant/storybooker.git",
  "author": "Siddhant Gupta <guptasiddhant@icloud.com>",
  "license": "MIT",
  "packageManager": "yarn@4.1.1",
  "workspaces": [
    "./apps/*",
    "./packages/*"
  ],
  "scripts": {
    "azurite": "npx -y azurite --skipApiVersionCheck -s -l ./.azurite",
    "build": "turbo build",
    "change": "changeset",
    "check": "turbo check",
    "core:build": "yarn workspace @storybooker/core build",
    "core:dev": "yarn workspace @storybooker/core dev",
    "cli": "yarn workspace storybooker start",
    "cli:dev": "yarn workspace storybooker dev",
    "dev": "turbo dev",
    "fmt": "turbo fmt",
    "functions": "yarn workspace @storybooker/azure-functions start",
    "lint": "turbo lint",
    "publish": "changeset version && yarn workspaces foreach -A --no-private npm publish && changeset tag",
    "server": "deno serve -A --unstable-sloppy-imports --watch ./server.ts",
    "verify": "turbo verify"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6"
  },
  "overrides": {
    "debug": "4.4.1"
  }
}
