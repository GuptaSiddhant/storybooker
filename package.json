{
  "name": "storybooker",
  "private": true,
  "description": "Self hosted Storybooks management.",
  "repository": "git@github.com:GuptaSiddhant/storybooker.git",
  "author": "Siddhant Gupta <guptasiddhant@icloud.com>",
  "license": "MIT",
  "packageManager": "yarn@4.1.1",
  "workspaces": [
    "./apps/*",
    "./packages/**/*"
  ],
  "scripts": {
    "azurite": "npx -y azurite --skipApiVersionCheck -s -l ./.azurite",
    "build": "turbo build",
    "check": "turbo check",
    "dev": "turbo dev",
    "fmt": "turbo fmt",
    "functions": "yarn workspace @storybooker/azure-functions start",
    "lint": "turbo lint",
    "server": "deno serve -A --watch ./server/mod.ts",
    "verify": "turbo verify"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6"
  }
}
