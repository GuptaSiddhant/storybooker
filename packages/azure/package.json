{
  "name": "@storybooker/azure",
  "version": "0.0.0",
  "type": "module",
  "description": "Utils to upload and manage Storybooks via Azure Functions and storage.",
  "author": {
    "name": "Siddhant Gupta",
    "url": "https://guptasiddhant.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guptasiddhant/storybooker",
    "directory": "packages/azure"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/guptasiddhant/storybooker/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "azure",
    "functions",
    "azure-functions",
    "storybook",
    "storybooks",
    "storybooker",
    "chromatic",
    "storage",
    "blob",
    "upload",
    "table",
    "compress",
    "builds",
    "labels",
    "projects"
  ],
  "sideEffects": false,
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "main": "./start.js",
  "imports": {
    "#components/*": "./src/components/*.tsx",
    "#builds/*": "./src/resources/builds/*.ts",
    "#handlers/*": "./src/handlers/*.tsx",
    "#labels/*": "./src/resources/labels/*.ts",
    "#projects/*": "./src/resources/projects/*.ts",
    "#utils/*": "./src/utils/*.ts"
  },
  "scripts": {
    "azurite": "npx -y azurite --skipApiVersionCheck -s -l ./.azurite",
    "build": "tsdown",
    "check": "tsgo --noEmit",
    "clear": "rm -rf coverage dist & true",
    "dev": "tsdown -w ./src",
    "lint": "oxlint -c ../../oxlintrc.json --type-aware ./src",
    "lint:fix": "yarn lint --fix",
    "start": "func start",
    "verify": "yarn clear; yarn check; yarn lint; yarn build",
    "xss": "xss-scan"
  },
  "dependencies": {
    "@azure/data-tables": "^13.0.0",
    "@azure/functions": "^4.0.0",
    "@azure/storage-blob": "^12.0.0",
    "@kitajs/html": "^4.0.0",
    "decompress": "^4.0.0",
    "zod": "^4.0.0",
    "zod-openapi": "^5.0.0"
  },
  "devDependencies": {
    "@kitajs/ts-html-plugin": "^4.0.0",
    "@types/decompress": "^4.0.0",
    "@types/node": "^22.0.0",
    "@typescript/native-preview": "^7.0.0-dev.20250823.8",
    "glob": "^10.0.0",
    "oxlint": "^1.12.0",
    "oxlint-tsgolint": "^0.0.4",
    "tsdown": "^0.14.1"
  }
}
