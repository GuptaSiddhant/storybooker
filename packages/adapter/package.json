{
  "name": "@storybooker/adapter",
  "version": "0.16.0",
  "type": "module",
  "description": "Storybooker adapters interface for external services.",
  "author": {
    "name": "Siddhant Gupta",
    "url": "https://guptasiddhant.com"
  },
  "homepage": "https://storybooker.js.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/guptasiddhant/storybooker",
    "directory": "packages/adapter"
  },
  "files": [
    "src",
    "dist"
  ],
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "build": "tsdown",
    "check": "tsgo --noEmit",
    "dev": "tsdown -w ./src",
    "fmt": "prettier src --write --config ../../.prettierrc",
    "lint": "oxlint --type-aware ./src",
    "lint:fix": "yarn lint --fix"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript/native-preview": "^7.0.0-dev.20251024.1",
    "oxlint": "^1.24.0",
    "oxlint-tsgolint": "^0.3.0",
    "prettier": "^3.6.2",
    "tsdown": "^0.15.9"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./auth": {
      "source": "./src/auth.ts",
      "default": "./dist/auth.js"
    },
    "./database": {
      "source": "./src/database.ts",
      "default": "./dist/database.js"
    },
    "./logger": {
      "source": "./src/logger.ts",
      "default": "./dist/logger.js"
    },
    "./queue": {
      "source": "./src/queue.ts",
      "default": "./dist/queue.js"
    },
    "./storage": {
      "source": "./src/storage.ts",
      "default": "./dist/storage.js"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "exports": {
      ".": "./dist/index.js",
      "./auth": "./dist/auth.js",
      "./database": "./dist/database.js",
      "./logger": "./dist/logger.js",
      "./queue": "./dist/queue.js",
      "./storage": "./dist/storage.js",
      "./package.json": "./package.json"
    }
  }
}
