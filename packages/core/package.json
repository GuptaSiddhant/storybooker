{
  "name": "@storybooker/core",
  "version": "0.14.2",
  "type": "module",
  "description": "Storybooker platform agnostic router core.",
  "author": {
    "name": "Siddhant Gupta",
    "url": "https://guptasiddhant.com"
  },
  "homepage": "https://storybooker.js.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/guptasiddhant/storybooker",
    "directory": "packages/core"
  },
  "files": [
    "src",
    "dist"
  ],
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "build": "tsdown",
    "check": "tsgo --noEmit",
    "dev": "tsdown -w ./src",
    "fmt": "prettier src --write --config ../../.prettierrc",
    "lint": "oxlint --type-aware ./src",
    "lint:fix": "yarn lint --fix",
    "publish:jsr": "npx -y jsr publish",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@remix-run/route-pattern": "^0.10.0",
    "decompress": "^4.0.0",
    "zod": "^4.0.0",
    "zod-openapi": "^5.0.0"
  },
  "devDependencies": {
    "@kitajs/html": "^4.0.0",
    "@types/decompress": "^4.0.0",
    "@types/node": "^22.0.0",
    "@typescript/native-preview": "^7.0.0-dev.20251024.1",
    "@vitest/coverage-v8": "^3.2.4",
    "glob": "^10.0.0",
    "oxlint": "^1.24.0",
    "oxlint-tsgolint": "^0.3.0",
    "prettier": "^3.6.2",
    "tsdown": "^0.15.9",
    "vitest": "^3.2.4"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./adapters": {
      "source": "./src/adapters.ts",
      "default": "./dist/adapters.js"
    },
    "./translations": {
      "source": "./src/translations/index.ts",
      "default": "./dist/translations.js"
    },
    "./translations/en-gb": {
      "source": "./src/translations/en-gb.ts",
      "default": "./dist/translations/en-gb.js"
    },
    "./types": {
      "source": "./src/types/index.ts",
      "default": "./dist/types.js"
    },
    "./utils": {
      "source": "./src/utils/index.ts",
      "default": "./dist/utils.js"
    },
    "./package.json": "./package.json",
    "./openapi.json": "./dist/openapi.json"
  },
  "publishConfig": {
    "exports": {
      ".": "./dist/index.js",
      "./adapters": "./dist/adapters.js",
      "./translations": "./dist/translations.js",
      "./translations/en-gb": "./dist/translations/en-gb.js",
      "./types": "./dist/types.js",
      "./utils": "./dist/utils.js",
      "./package.json": "./package.json"
    }
  }
}
