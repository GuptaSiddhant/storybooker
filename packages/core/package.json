{
  "name": "storybooker",
  "version": "0.24.0",
  "type": "module",
  "description": "Manage Storybook instances on your own infrastructure with ease.",
  "author": {
    "name": "Siddhant Gupta",
    "url": "https://guptasiddhant.com"
  },
  "homepage": "https://storybooker.js.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/GuptaSiddhant/storybooker",
    "directory": "packages/core"
  },
  "files": [
    "src",
    "dist",
    "openapi.json"
  ],
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown -w",
    "fmt": "oxfmt -c ../../.oxfmtrc.json ./src",
    "lint": "oxlint --type-aware --type-check --import-plugin ./src",
    "lint:fix": "yarn lint --fix",
    "openapi": "node ./scripts/gen-openapi-json.ts",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.5",
    "@remix-run/headers": "^0.16.0",
    "decompress": "^4.0.0",
    "hono": "^4.11.0",
    "js-yaml": "^4.1.1",
    "zod": "^4.2.0"
  },
  "devDependencies": {
    "@types/decompress": "^4.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "catalog:",
    "@typescript/native-preview": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "oxfmt": "catalog:",
    "oxlint": "catalog:",
    "oxlint-tsgolint": "catalog:",
    "redis": "^5.10.0",
    "tsdown": "catalog:",
    "vitest": "catalog:"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./dist/index.mjs",
    "./adapter": "./dist/adapter.mjs",
    "./adapter/auth": "./dist/adapter/auth.mjs",
    "./adapter/database": "./dist/adapter/database.mjs",
    "./adapter/logger": "./dist/adapter/logger.mjs",
    "./adapter/storage": "./dist/adapter/storage.mjs",
    "./adapter/ui": "./dist/adapter/ui.mjs",
    "./constants": "./dist/constants.mjs",
    "./router": "./dist/router.mjs",
    "./types": "./dist/types.mjs",
    "./utils": "./dist/utils.mjs",
    "./package.json": "./package.json",
    "./openapi.json": "./openapi.json"
  }
}
