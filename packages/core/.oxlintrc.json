{
  "$schema": "../../node_modules/oxlint/configuration_schema.json",
  "extends": ["../../.oxlintrc.json"],
  "env": {
    "builtin": true,
    "node": true
  },
  "rules": {
    "promise-function-async": "allow",
    "typescript/no-base-to-string": "allow",
    "typescript/unbound-method": "allow",
    "max-lines": "allow",
    "max-lines-per-function": "allow",
    "max-lines-per-file": "allow",
    "sort-keys": "allow"
  },
  "overrides": [
    {
      "files": ["src/**/*.test.ts", "src/mocks/**/*.ts"],
      "rules": {
        "max-classes-per-file": "allow",
        "max-lines-per-function": "allow",
        "max-lines": "allow",
        "max-params": "allow",
        "sort-keys": "allow",
        "typescript/require-await": "allow"
      }
    },
    {
      "files": ["src/**/*.tsx"],
      "rules": {
        "sort-keys": "allow",
        "no-nested-ternary": "allow",
        "unicorn/no-nested-ternary": "allow"
      }
    }
  ]
}
