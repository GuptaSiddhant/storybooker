{
  "$schema": "./node_modules/turbo/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist", "storybook-static"]
    },
    "check": {
      "dependsOn": ["^build"],
      "outputs": ["tsconfig.tsbuildinfo"],
      "outputLogs": "new-only"
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "fmt": {
      "outputLogs": "new-only"
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputLogs": "new-only"
    },
    "verify": {
      "dependsOn": ["build", "check", "lint"]
    }
  }
}
