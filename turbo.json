{
  "$schema": "./node_modules/turbo/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist", "storybook-static", "build"],
      "env": [
        "EDGE_CONFIG_ID",
        "EDGE_CONFIG_TOKEN",
        "EDGE_CONFIG",
        "BLOB_READ_WRITE_TOKEN"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "fmt": {
      "outputLogs": "new-only"
    },
    "lint": {
      "outputLogs": "new-only"
    },
    "publish:jsr": { "cache": false },
    "test": {
      "outputs": ["./node_modules/.vite/vitest"]
    },
    "verify": {
      "dependsOn": ["build", "lint", "test"]
    }
  }
}
