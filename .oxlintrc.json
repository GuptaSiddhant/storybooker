{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "categories": {
    "correctness": "error",
    "nursery": "error",
    "pedantic": "error",
    "perf": "error",
    "restriction": "error",
    "style": "warn",
    "suspicious": "error"
  },
  "env": {
    "builtin": true,
    "node": true
  },
  "rules": {
    "arrow-body-style": "allow",
    "id-length": ["warn", { "exceptions": ["z"] }],
    "func-style": ["allow"],
    "max-lines-per-function": [
      "warn",
      { "max": 50, "skipBlankLines": true, "skipComments": true }
    ],
    "sort-imports": "allow",
    "no-async-await": "allow",
    "no-continue": "allow",
    "no-magic-numbers": "allow",
    "no-null": "allow",
    "no-optional-chaining": "allow",
    "no-rest-spread-properties": "allow",
    "no-script-url": "allow",
    "no-ternary": "allow",
    "no-undefined": "allow",
    "no-unsafe-type-assertion": "allow",
    "only-throw-error": "allow",
    "return-await": "allow"
  }
}
